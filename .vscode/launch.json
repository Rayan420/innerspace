// launch configuration for debugging with different envirmonet flavors

// launch.json
{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Launch development",
      "request": "launch",
      "type": "dart",
      "program": "lib/env/main_development.dart",
        "args": [
            "--flavor", 
            "development",
            "--target",
            "lib/env/main_development.dart"
        ],
    },
    
    {
      "name": "Launch staging",
      "request": "launch",
      "type": "dart",
      "program": "lib/env/main_staging.dart",
        "args": [
            "--flavor", 
            "staging",
            "--target",
            "lib/env/main_staging.dart"
        ],
    },
    
    {
      "name": "Launch production",
      "request": "launch",
      "type": "dart",
      "program": "lib/env/main_production.dart",
        "args": [
            "--flavor", 
            "production",
            "--target",
            "lib/env/main_production.dart"
        ],
    },
  ]
}
